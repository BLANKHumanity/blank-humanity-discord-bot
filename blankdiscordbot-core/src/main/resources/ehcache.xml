<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xmlns='http://www.ehcache.org/v3' xsi:schemaLocation="
            http://www.ehcache.org/v3 
            http://www.ehcache.org/schema/ehcache-core-3.7.xsd">
	<persistence directory="spring-boot-ehcache/cache" />
	<cache-template name="default">
		<expiry>
			<ttl unit="seconds">30</ttl>
		</expiry>
		<resources>
			<heap>1000</heap>
			<offheap unit="MB">5</offheap>
			<disk persistent="true" unit="MB">10</disk>
		</resources>
	</cache-template>
	<cache-template name="nftImages">
		<expiry>
			<ttl unit="hours">24</ttl>
			<tti unit="hours">12</tti>
		</expiry>
		<resources>
			<heap>1000</heap>
			<offheap unit="MB">10</offheap>
			<disk persistent="true" unit="MB">50</disk>
		</resources>
	</cache-template>
	<cache-template name="nftOwners">
		<expiry>
			<ttl unit="hours">48</ttl>
			<tti unit="hours">24</tti
		</expiry>
		<resources>
			<heap>1000</heap>
			<offheap unit="MB">10</offheap>
			<disk persistent="true" unit="MB">20</disk>
		</resources>
	</cache-template>
</config>