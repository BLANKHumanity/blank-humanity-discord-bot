		"shop": {
			"type": "object",
			"properties": {
				"itemsPerPage": {
					"type": "number",
					"minimum": 4,
					"maximum": 20
				},
				"shopItems": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/shopEntry"
					}
				}
			},
			"required": [
				"itemsPerPage",
				"shopItems"
			]
		}
	},
	"$defs": {
		"command": {
			"properties": {
				"description": {
					"type": "string",
					"minLength": 5
				},
				"hidden": {
					"type": "boolean"
				},
				"roleRestricted": {
					"type": "boolean",
					"default": false
				},
				"allowedRoles": {
					"type": "array",
					"items": {
						"type": "number"
					}
				},
				"options": {
					"type": "object"
				}
			},
			"if": {
				"properties": {
					"roleRestricted": {
						"const": false
					}
				},
				"required": "roleRestricted"
			},
			"else": {
				"required": [
					"allowedRoles"
				]
			},
			"required": [
				"description"
			],
			"unevaluatedProperties": false
		},
		"argument": {
			"type": "string",
			"description": "Description for Argument",
			"minLength": 3
		},
		"message": {
			"type": "string",
			"pattern": "^([^\\%]|\\%\\([a-zA-Z]+\\)|\\%(?!\\w|\\())*$"
		},
		"item": {
			"type": "object",
			"properties": {
				"id": {
					"type": "number"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"useName": {
					"type": "string",
					"pattern": "^[a-zA-Z0-9]+$"
				},
				"action": {
					"type": "string",
					"enum": [
						"ROLE_REWARD"
					]
				},
				"actionArguments": {
					"type": "object"
				}
			},
			"required": [
				"id",
				"name",
				"description"
			],
			"additionalProperties": false,
			"allOf": [
				{
					"if": {
						"required": [
							"action"
						]
					},
					"then": {
						"required": [
							"useName"
						]
					},
					"else": {
						"not": {
							"required": ["actionArguments"]
						}
					}
				},
				{
					"if": {
						"required": [
							"useName"
						]
					},
					"then": {
						"required": [
							"action"
						]
					}
				},
				{
					"if": {
						"properties": {
							"action": {
								"const": "ROLE_REWARD"
							}
						},
						"required":[
							"action"
						]
					},
					"then": {
						"properties": {
							"actionArguments": {
								"properties": {
									"roleId": {
										"type": "number"
									}
								},
								"required": [
									"roleId"
								],
								"additionalProperties": false
							}
						},
						"required": [
							"actionArguments"
						]
					}
				}
			]
		},
		"shopEntry": {
			"type": "object",
			"properties": {
				"id": {
					"type": "number",
					"minimum": 1,
					"description": "Unique *Shop* ID"
				},
				"itemId": {
					"type": "number",
					"minimum": 1,
					"description": "ID for Item to be sold (see items.definitions)"
				},
				"buyName": {
					"type": "string",
					"pattern": "^[a-zA-Z0-9]+$",
					"description": "Name used for buying this entry (/buy [buyName])"
				},
				"price":{
					"type": "number"
				},
				"amountAvailable": {
					"type": "number",
					"minimum": -1,
					"description": "Amount of times this shop entry can be bought (-1 for unlimited)"
				}
			},
			"required": [
				"id",
				"itemId",
				"buyName",
				"price",
				"amountAvailable"
			],
			"additionalProperties": false
		}
	}
}